<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h3><%= title %></h3>
    <% if (users.length > 1) { %>
    <ul>
      <% users.forEach((user) => { %>
      <li><%= user.id %> : <%= user.username %></li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No search result for <%= query %></p>
    <% }%>
    <ul>
      <li>
        <button>
          <a href="/user"> search for a user </a>
        </button>
        <button>
          <a href="/delete"> delete all users </a>
        </button>
      </li>
    </ul>
  </body>
</html>
