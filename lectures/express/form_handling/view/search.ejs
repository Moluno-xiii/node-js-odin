<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <button>
      <a href="/"> go back home </a>
    </button>
    <ul>
      <% if (locals.users.length) {%> <% users.forEach(user => { %>
      <li>
        <p>ID: <%= user.id %></p>
        <p>Name: <%= user.firstName %> <%= user.lastName %></p>
        <p>Email : <%= user.email %></p>
        <p>Age : <%= user.age %></p>
        <p>Bio : <%= user.bio %></p>
        <button>
          <a href="/<%= user.id %>/update">Update</a>
        </button>

        <form
          action="/<%= user.id %>/delete"
          method="post"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('are you sure you want to delete this user?')"
          >
            Delete
          </button>
        </form>
      </li>
      <% }) %> <% } else { %>
      <li>No users found for <%= email %></li>
      <% }%>
    </ul>
  </body>
</html>
